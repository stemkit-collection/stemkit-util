#!/bin/sh

unset FOLDER 
OPTERR=0

while getopts "vd:" option; do
  case "${option}" in
    v)
      set -xv
    ;;
    d)
      FOLDER="${FOLDER:+${FOLDER} }${OPTARG}"
    ;;
    *)
      echo "USAGE `basename ${0}` [-d<folder>] [<svn command>]" 1>&2
      exit 2
    ;;
  esac
done
shift `expr $OPTIND - 1`

find ${FOLDER:-.} -name src -prune -print | xargs -n1 svn "${@:-status}"
